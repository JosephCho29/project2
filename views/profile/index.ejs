<!-- views/profiles/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
</head>

<body>
  <%- include('../partials/_navbar.ejs') %>
    <h1>Profile</h1>
    <a href="/users/<%=user._id%>/profiles/new">Make an Appointment!</a>
    <ul>
      <!-- <% if (profiles) { %> -->
      <% profiles.forEach((profile)=>{ %>
        <h2>
          <!-- Add a link around each title and company, directing to the 'show' page -->
          <a href="/users/<%= user._id %>/profiles/<%= profile._id %>">
            <%= profile.petname %>
          </a>
        </h2>
        <% }) %>
          <!-- <% } %> -->
    </ul>
</body>

</html>