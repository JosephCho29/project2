<body>
    <!-- update the header -->
    <h1>Edit <%= profile.name %></h1>
        <form action="/profile/<%=profile._id%>?_method=PUT" method="POST">
        <label for="name">Name:</label>
        <input type="text" name="name" value="<%= profile.name %>" />
        <br/>
        <label for="age">Age:</label>
        <input type="number" name="age" value="<%= profile.age %>" />
        <br/>
        <label for="breed">Breed:</label>
        <input type="text" name="breed" value="<%= profile.breed %>" />
        <br/>
        <label for="likesAndDislikes">Likes and Dislikes:</label>
        <input type="text" name="likesAndDislikes" value="<%= profile.likesAndDislikes %>" />
        <br/>
        <label for="friendlyToStrangers">Friendly To Strangers?</label>
        <input type="checkbox" name="friendlyToStrangers" <% if (profile.friendlyToStrangers) { %>checked<% } %> >
        <br/>
    <!-- update the button text -->
        <button type="submit">Update profile</button>
    </form>
    <a href="/profile">Back to profiles</a>
 </body>
  